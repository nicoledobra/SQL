select p.Name || ' (' || Piece || ')' || ' is provided by ' 
|| pr.name || ' (' || Provider || ')' || ' and costs ' || prp.price AS RESULT
from Pieces p, Providers pr, provides prp
where p.Code = prp.Piece AND pr.Code = prp.Provider

